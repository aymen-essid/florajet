{% extends "base.html.twig" %}

{% block body %}


<div class="container">
<h2>Aggregated Aticles : </h2>
<br>
    <table class="table">
    <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        </tr>
    </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <th scope="row"> {{article.id}}</th>
                <td>{{article.title}}</td>
                <td>{{article.content}}</td>
            </tr>
        </div>
        {% endfor %}
        </tbody>
    </table>
</div>    

{% endblock %}
